<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText 
        android:id="@+id/edtKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_content"
        android:layout_marginLeft="@dimen/margin_between_content" 
        android:layout_marginRight="@dimen/margin_between_content"
        android:inputType="text|textNoSuggestions"/>
    
    <!-- Post Cmnt button -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_between_content"
        android:layout_marginLeft="@dimen/margin_between_content" 
        android:layout_marginRight="@dimen/margin_between_content"
        android:background="@color/purple"
        android:text="Search" >
        <requestFocus />
    </Button>
    
    
    <ListView
        android:id="@+id/lst_ig_follows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_between_content" 
        android:layout_marginRight="@dimen/margin_between_content"
        android:cacheColorHint="#00000000"
        android:listSelector="#00600D0B"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/txt_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No content"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>