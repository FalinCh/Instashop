<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText 
        android:id="@+id/edtKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_content"
        android:layout_marginLeft="@dimen/margin_between_content" 
        android:layout_marginRight="@dimen/margin_between_content" 
        android:inputType="text|textNoSuggestions"/>
    
    <!-- Post Cmnt button -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_between_content"
        android:layout_marginLeft="@dimen/margin_between_content" 
        android:layout_marginRight="@dimen/margin_between_content" 
        android:background="@color/purple"
        android:text="Search" >
        <requestFocus />
    </Button>
    
    <GridView
	    android:id="@+id/grid_ig_feeds"
	    android:layout_width="fill_parent" 
	    android:layout_height="match_parent"
	    android:columnWidth="120dp"
	    android:numColumns="auto_fit"
	    android:verticalSpacing="1dp"
	    android:horizontalSpacing="1dp"
	    android:stretchMode="columnWidth"
	    android:gravity="center" />

    <TextView
        android:id="@+id/txt_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No content"
        android:textColor="@android:color/white"
        android:visibility="gone" />
    
    
</LinearLayout>