<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cryingonion.instashop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cryingonion.instashop.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cryingonion.instashop.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.cryingonion.instashop.InstagramActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="oauth2client"
                      android:host="timetoplaytoys"/> 
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.cryingonion.instashop.TimelineActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.cryingonion.instashop.ListFollowsActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.cryingonion.instashop.SearchPeopleActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.cryingonion.instashop.ListProductActivity"
            android:label="@string/app_name" >
        </activity>
       
        <activity
            android:name="com.cryingonion.instashop.instagram.InstagramVideoDetailActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
